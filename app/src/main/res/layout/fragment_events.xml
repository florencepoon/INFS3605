<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="372dp"
        android:layout_height="457dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="#E8E6E6"
        android:src="@drawable/rounded_corner_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:layout_width="246dp"
        android:layout_height="26dp"
        android:layout_marginHorizontal="39sp"
        android:layout_marginVertical="20sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inder"
        android:text="Filter:"
        android:textAlignment="viewStart"
        android:textColor="@color/navy"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <Button
        android:id="@+id/byOrganiserButton"
        android:layout_width="275dp"
        android:layout_height="51dp"
        android:layout_marginBottom="229dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inder"
        android:text="@string/filter_byOrganiser"
        android:textColor="@color/black"
        android:textColorLink="#2B3244"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/byLocationButton" />

    <Button
        android:id="@+id/byLocationButton"
        android:layout_width="274dp"
        android:layout_height="52dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inder"
        android:text="@string/filter_byLocation"
        android:textColor="@color/black"
        android:textColorLink="#2B3244"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/byOrganiserButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/byTypeButton" />

    <Button
        android:id="@+id/byTypeButton"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inder"
        android:text="@string/filter_byType"
        android:textColor="@color/black"
        android:textColorLink="#2B3244"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/byLocationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/byNameButton" />

    <Button
        android:id="@+id/byNameButton"
        android:layout_width="271dp"
        android:layout_height="53dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inder"
        android:text="@string/filter_byName"
        android:textColor="@color/black"
        android:textColorLink="#2B3244"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/byTypeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inder"
        android:text="@string/events"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/createEventButton"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/add_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/date_range_light"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>